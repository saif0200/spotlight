{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "spotlight",
  "version": "0.1.0",
  "identifier": "com.saif.spotlight",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Spotlight Search",
        "width": 700,
        "height": 130,
        "center": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "backgroundColor": "#00000000",
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focus": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ2QTNEMjMyNkQwNjkyRkUKUldUK2tnWnRNdEtqUmpNT0NKV1J1U2Ivb09FNUJram9DZmxmSjRwMCt6N3RqNmNQbmYydHlUYkoK",
      "endpoints": [
        "https://github.com/saif0200/spotlight/releases/latest/download/latest.json"
      ]
    }
  }
}
